<div class="form_card">
<%= form_with model:item, local: true do |f| %>
<%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <div class="form_wrap">
      <%= f.text_field :name, class: 'entry_field' %>

      <%= f.label :name, "名前" %>
      <span class='focus_line'></span>
    </div>

  </div>
  <div class="field">
    <div class="form_wrap" id='value_field_wrap'>
      <%= f.text_field :value, class: 'entry_field required' %>
      
      <%= f.label :value, "金額（半角数字）*" %>
      <span class='focus_line'></span>
    </div>
    <div class="error_message"></div>

  </div>
  <div class="select_field">
    <label class='select'>
      <%= f.select :category, @options, {selected: item.category},  {id: 'select'} %>
    </label>
    <div class="error_message"></div>
  </div>
  <div class="date_field">
    <%= f.label :date, "日付*", id: 'date' %>
    <%= f.date_select :date, class: 'required', default: @the_day %>
    <div class="error_message"></div>

  </div>
  <div class="textarea_field">
    <%= f.label :memo, "備考" %>
    <%= f.text_area :memo %>
  </div>
  <%= f.hidden_field :room_id, value: @room.id  %>
  <%= f.hidden_field :user_id, value: current_user.id  %>

    <%= f.submit class: 'btn' %>
  *は必須項目
<% end %>
</div>
<%= render 'shared/back', path: room_path(@room) %>