<%= form_with model:@invite do |f| %>
  <div class="form-container">
    <%= f.label :unique_id, "ID" %>
    <%= f.text_field :unique_id, placeholder: '招待したい人のIDを入力してください' %>
    <%= f.hidden_field :room_id, value: params[:id] %>
    <%= f.hidden_field :inviting_id, value: current_user.id %>
    <%= f.submit '招待する' %>
  </div>
  
<% end %>