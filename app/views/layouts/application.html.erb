<!DOCTYPE html>
<html>
  <head>
    <title>KakeiboApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <ul class='nav'>
      <li class='nav_link'><%=link_to  "ホーム", root_path %></li>
      <% if user_signed_in? %>
        <li class='nav_link'><%=link_to  "ログアウト", destroy_user_session_path, method: :delete%></li>
        <li class='dropdown'>
          <a class="dropbtn">ユーザー</a>
          <div class="dropdown-content">
            <%= link_to  "マイページ", user_path(current_user) %>
            <%= link_to  "ユーザー情報", info_user_path(current_user) %>
            <%= link_to  "ユーザー編集", edit_user_registration_path %>
          </div>
        </li>
      <% else %>
        <li class='nav_link'><%=link_to  "ログイン", new_user_session_path%></li>
      <% end %>
      
    </ul>
    <% if notice %>
      <p class="notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert"><%= alert %></p>
    <% end %>
    
    <%= yield %>
  </body>
</html>
